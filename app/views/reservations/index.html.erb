<div class="content-container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <div class="content-item content-item-title">
        <h1>Your registred reservations</h1>
      </div>
      <div class="row">
        <%- @reservations.each do |reservation| %>
          <div class="col-xs-12 col-md-6">
            <div class="content-item">
              <div class="profile-picture profile-picture-small", style="background-image: url('<%= reservation.hero.picture.url(:large) %>')">
              </div>
              <h3><%= reservation.hero.name %></h3>
              <p><%= reservation.hero.description %></p>
              <hr>
              <p>
                Status:
                <%- if reservation.validated %>
                  <span class="validation">Validated</span>
                  <% else %>
                  <span class="validation">Pending</span>
                <% end -%>
              </p>
              <hr>
              <p>Dates:</p>
              <p>From <%= reservation.check_in %></p>
              <p>to <%= reservation.check_out %></p>
              <hr>
              <p>Price per day: <%= reservation.hero.price %></p>
              <%= link_to "See more", hero_reservation_path(reservation.hero_id, reservation.id), class: "btn btn-primary" %>
            </div>
          </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>



